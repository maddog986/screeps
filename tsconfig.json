{
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "target": "es2018",
    "module": "esnext",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "old-backup"
  ]
}
